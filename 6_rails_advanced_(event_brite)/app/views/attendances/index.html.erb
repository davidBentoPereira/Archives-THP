<div class="container">
  <div class="row text-center justify-content-center mt-3">
    <!-- Event title -->
    <h3 class="col-12"><%="#{@event.title} attendees" %></h3>

    <p class="col-12 text-muted"><%="#{@attendances.count} participations" %></p>

    <p class="col-12 mt-2">
      <%= link_to "Modifier l'évènement", edit_event_path(id: @event.id), class: "btn btn-primary" %>
    </p>

    <ul class="list-group list-group-flush mt-3 col-4">
      <% @attendances.each do |attendance| %>
        <li class="list-group-item">
          <%= attendance.user.first_name %> <%= attendance.user.last_name %><br/>
          <span class="text-muted"><%= attendance.user.email %></span>
        </li>
      <% end %>
    </ul>

  </div>
</div>