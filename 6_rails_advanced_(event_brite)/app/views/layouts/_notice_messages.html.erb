<!-- Success messages -->
<% if flash[:success] %>
  <div class="alert alert-success text-center" role="alert">
    <i class="fa fa-info-circle" aria-hidden="true"></i> <%= flash[:success] %>
  </div>
<% end %>

<!-- Error messages -->
<% if flash[:error] %>
  <div class="alert alert-danger text-center" role="alert">
    <i class="fa fa-info-circle" aria-hidden="true"></i> <%= flash[:error] %>
  </div>
<% end %>

<!-- Notice messages -->
<% if flash[:notice] %>
  <div class="alert alert-info text-center" role="alert">
    <i class="fa fa-info-circle" aria-hidden="true"></i> <%= flash[:notice] %>
  </div>
<% end %>
