<h2 class="card-title text-center m-3">Inscrit toi vite à l'évènement <em><%= @event.title %></em>, ça annonce du grand Mendes !</h2>
<div class="container col-6 text-center">

  <%= form_tag attendances_path(id: @event.id) do %>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Inscription à l'évènement <%= @event.title %>"
            data-amount="<%= @event.price * 100 %>"
            data-locale="fr"
            data-currency="eur"
            data-country="FR"
            data-label="Cliquer pour payer <%= @event.price %>€"></script>
  <% end %>

</div>

