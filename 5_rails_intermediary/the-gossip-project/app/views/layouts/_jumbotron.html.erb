<!-- JUMBOTRON -->
<section>
  <div class="jumbotron jumbotron-fluid">
    <div class="container text-center text-light">
      <h1 class="display-4"> #BTP - Balances Ton Potin</h1>
      <% if session[:user_id] %>
        <!-- If user is connected-->
        <h2 class="h3">Bienvenu <%= current_user.full_name %> ! Bouges-nous ton popotin et racontes-nous tes derniers potins &#9996;&#65039; Profites-en pour regarder ce qui se raconte autour de toi &#128523; </h2>
        <a type="button" class="btn btn-info btn-lg m-3" href="<%=new_gossip_path %>">Je balances mon potin</a>
      <% else %>
        <!-- If user is not connected-->
        <h2 class="h3">Découvrez des petits potins chaud bouillant près de chez vous et révélez les vôtres !</h2>
        <a type="button" class="btn btn-info btn-lg m-3" href="<%=new_session_path %>">Je me connecte</a>
        <a type="button" class="btn btn-secondary btn-lg  m-3" href="<%=new_user_path %>">Je créé mon compte</a>
      <% end %>

    </div>
  </div>
</section>
