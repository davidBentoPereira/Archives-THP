    <%= button_to "Supprimer", email_path(email.id), method: "delete", remote: true, class: "btn btn-outline-danger mx-3" %>
  </div>
<% if @email.read %>
  <div class="col-2">
    <%= button_to "Marquer comme 'Non lu'", email_path(email.id), method: "put", remote: true, class: "btn btn-secondary mx-3" %>
  </div>
    <% else %>
    <%= button_to "Marquer comme 'lu'", email_path(email.id), method: "put", remote: true, class: "btn btn-secondary mx-3" %>
  <%end %>
</div>
