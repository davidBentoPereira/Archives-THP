<!-- Content title -->
<h2 class="h1 text-center my-3">Créer un potin</h2>

<!-- Flash message -->
<% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row justify-content-center">
  <div class="col-6">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
        <%= label_tag 'Titre :' %>
        <%= text_field_tag 'title', @gossip.title, {class: 'form-control', placeholder: "Game Of Thrones"} %>
      </div>
      <div class="form-group">
        <%= label_tag 'Contenu :' %>
        <%= text_area_tag 'content', @gossip.content, {class: 'form-control', placeholder: "John Snow fucks with Daenerys which is his aunty."} %>
      </div>
      <div class="row justify-content-center">
          <%= submit_tag "Créer le potin", {class: 'btn btn-primary'} %>
      </div>
    <% end %>
  </div>
</div>
